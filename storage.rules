rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isImageUpload() {
      return request.resource != null
        && request.resource.contentType != null
        && request.resource.contentType.matches('image/.*');
    }

    function imageWithinLimit(maxMb) {
      return request.resource != null
        && request.resource.size < maxMb * 1024 * 1024;
    }

    // Profile photos uploaded by the currently signed-in user.
    match /users/{userId}/profile_photos/{fileName} {
      allow read: if isSignedIn();
      allow create, update: if isOwner(userId)
        && isImageUpload()
        && imageWithinLimit(15);
      allow delete: if isOwner(userId);
    }

    // Allow user-owned files in /users/{uid}/... while keeping writes private.
    match /users/{userId}/{folder}/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) && folder != 'profile_photos';
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

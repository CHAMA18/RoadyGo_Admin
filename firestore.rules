rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - admins can read/write their own data
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Drivers collection - authenticated admins can read/write
    match /drivers/{driverId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }
    
    // Rides collection - authenticated admins can read/write
    match /rides/{rideId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }
    
    // Regions collection - authenticated admins can read/write
    match /regions/{regionId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }
    
    // Schedules collection - authenticated admins can read/write
    match /schedules/{scheduleId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }
    
    // Activities collection - authenticated admins can read/write
    match /activities/{activityId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }
    
    // Rates collection - authenticated admins can read/write
    match /rates/{rateId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }
  }
}
